<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/circle_outline"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_notification"
        app:tint="@color/secondary"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:background="@drawable/circle_filled"
        android:backgroundTint="#2046c8bb" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Confirmed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/sofiasans"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/notification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your appointment with Dr. Smith is confirmed."
            android:textSize="14sp"
            android:fontFamily="@font/sofiasans"
            android:textColor="@color/gray"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="12sp"
            android:fontFamily="@font/sofiasans"
            android:textColor="@color/secondary"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <View
        android:id="@+id/notification_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/circle_filled"
        android:backgroundTint="@color/red"
        android:visibility="gone" />

</LinearLayout>
