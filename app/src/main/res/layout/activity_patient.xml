<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientActivity">

    <!-- Main Content -->
    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA">

        <!-- Fixed Top Navigation Bar -->
        <RelativeLayout
            android:id="@+id/top_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:elevation="4dp">

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_menu"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:tint="@color/primary"
                android:contentDescription="Menu" />
            
             <!-- Patient Info -->
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_toEndOf="@id/menu_icon"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sofiasans"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textSize="12sp"
                    android:fontFamily="@font/sofiasans"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notification"
                app:tint="@color/primary"
                android:contentDescription="Notifications" />

        </RelativeLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_nav_bar"
            android:fillViewport="true"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/primary"
                android:padding="16dp">

                <!-- Search Bar -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/secondary"
                    android:backgroundTint="@color/primary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_search"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/secondary"
                            android:contentDescription="Search" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/search_box"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Search doctors, appointments..."
                            android:background="@null"
                            android:fontFamily="@font/sofiasans"
                            android:textColorHint="@color/secondary"
                            android:padding="0dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sofiasans"
                    android:textColor="@color/secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Quick Actions Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="1"
                    android:layout_marginBottom="24dp">

                    <!-- My Appointments -->
                    <LinearLayout
                        android:id="@+id/quick_action_appointments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/secondary"
                            android:layout_marginBottom="8dp"
                            app:strokeColor="@color/secondary">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_schedule"
                                android:layout_gravity="center"
                                app:tint="@color/primary"
                                android:contentDescription="Appointments" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Appts"
                            android:textSize="12sp"
                            android:fontFamily="@font/sofiasans"
                            android:textColor="@color/secondary" />

                    </LinearLayout>

                    <!-- Book Appointment -->
                    <LinearLayout
                        android:id="@+id/quick_action_book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="4dp"
                             app:cardBackgroundColor="@color/secondary"
                            android:layout_marginBottom="8dp"
                            app:strokeColor="@color/secondary">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_prescription"
                                android:layout_gravity="center"
                                 app:tint="@color/primary"
                                android:contentDescription="Book" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book Now"
                            android:textSize="12sp"
                            android:fontFamily="@font/sofiasans"
                            android:textColor="@color/secondary" />

                    </LinearLayout>

                    <!-- Lab Results -->
                    <LinearLayout
                        android:id="@+id/quick_action_lab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="4dp"
                             app:cardBackgroundColor="@color/secondary"
                            android:layout_marginBottom="8dp"
                            app:strokeColor="@color/secondary">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_lab"
                                android:layout_gravity="center"
                                 app:tint="@color/primary"
                                android:contentDescription="Lab Results" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Results"
                            android:textSize="12sp"
                            android:fontFamily="@font/sofiasans"
                            android:textColor="@color/secondary" />

                    </LinearLayout>

                    <!-- Profile -->
                    <LinearLayout
                        android:id="@+id/quick_action_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="4dp"
                             app:cardBackgroundColor="@color/secondary"
                            android:layout_marginBottom="8dp"
                            app:strokeColor="@color/secondary">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_patient_avatar"
                                android:layout_gravity="center"
                                 app:tint="@color/primary"
                                android:contentDescription="Profile" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textSize="12sp"
                            android:fontFamily="@font/sofiasans"
                            android:textColor="@color/secondary" />

                    </LinearLayout>

                </GridLayout>

                <!-- Banner Carousel Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health Tips &amp; Announcements"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sofiasans"
                    android:textColor="@color/secondary"
                    android:layout_marginBottom="16dp" />

                <HorizontalScrollView
                    android:id="@+id/banner_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="24dp"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Banner 1 -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="280dp"
                            android:layout_height="160dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@color/secondary"
                                android:scaleType="centerCrop"
                                android:contentDescription="Banner 1" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Banner 2 -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="280dp"
                            android:layout_height="160dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@color/secondary"
                                android:scaleType="centerCrop"
                                android:contentDescription="Banner 2" />

                        </com.google.android.material.card.MaterialCardView>
                        
                    </LinearLayout>

                </HorizontalScrollView>

                <!-- Appointments Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your Appointments"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/sofiasans"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/show_all_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show All"
                        android:textSize="14sp"
                        android:fontFamily="@font/sofiasans"
                        android:textColor="@color/secondary"
                        android:padding="4dp" />

                </LinearLayout>

                <!-- Appointments List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/appointments_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_appointment"
                    tools:itemCount="3" />

                </LinearLayout>

        </ScrollView>

        <!-- Floating Action Button for Booking -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_book_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="24dp"
            android:contentDescription="Book Appointment"
            android:src="@android:drawable/ic_input_add"
            app:tint="@android:color/white"
            app:backgroundTint="@color/secondary"
            app:elevation="6dp"
            app:borderWidth="0dp" />

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        android:background="@color/secondary"
        app:itemTextColor="@color/primary"
        app:itemIconTint="@color/primary"/>

</androidx.drawerlayout.widget.DrawerLayout>